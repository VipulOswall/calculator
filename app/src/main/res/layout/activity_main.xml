<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vipuloswal.calculator.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textStyle="italic"
        android:textSize="50sp"
        android:id="@+id/tv1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:textSize="50sp"
            android:text=""
            android:layout_below="@+id/tv1"
            android:id="@+id/tv2"/>
    <Button
        android:id="@+id/one"
        android:layout_below="@+id/tv2"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/two"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@+id/one"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/three"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@+id/two"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
            android:id="@+id/del"
            android:layout_below="@+id/tv2"
            android:layout_toRightOf="@id/three"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="DEL"
        android:textStyle="bold"
            android:padding="20dp"
            android:background="#565656"
            android:textColor="#fff"
            android:textSize="20sp"/>

    <Button
        android:id="@+id/four"
        android:layout_below="@+id/one"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/five"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/four"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/six"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/five"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/plus"
        android:layout_below="@+id/del"
        android:layout_toRightOf="@id/six"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:textStyle="bold"
        android:text="+"
        android:padding="20dp"
        android:background="#565656"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/seven"
        android:layout_below="@+id/four"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/eight"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/seven"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/nine"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/eight"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/minus"
        android:layout_below="@+id/plus"
        android:layout_toRightOf="@id/nine"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="-"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="#565656"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/dot"
        android:layout_below="@+id/seven"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="."
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/zero"
        android:layout_below="@+id/seven"
        android:layout_toRightOf="@+id/dot"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/equal"
        android:layout_below="@+id/seven"
        android:layout_toRightOf="@+id/zero"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="="
        android:padding="25dp"
        android:background="#000"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/mult"
        android:layout_below="@+id/minus"
        android:layout_toRightOf="@id/equal"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="x"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="#565656"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/div"
        android:layout_below="@+id/mult"
        android:layout_toRightOf="@id/equal"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="/"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="#565656"
        android:textColor="#fff"
        android:textSize="20sp"/>
</RelativeLayout>
